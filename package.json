{
  "name": "angular-file-changer",
  "displayName": "Angular File Changer (Supporting Touch Bar and NgRx)",
  "description": "Easily navigate between typescript, template, style, and associated test files in your Angular project using the Mac Touch Bar.",
  "version": "0.0.3",
  "publisher": "Vijay",
  "author": {
    "name": "Vijay Kumar",
    "url": "https://vijaykumar.com"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Keymaps",
    "Other"
  ],
  "keywords": [
    "angular",
    "ngrx",
    "file",
    "typescript",
    "productivity"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.switchHTML",
        "title": ".html"
      },
      {
        "command": "extension.switchCSS",
        "title": ".css"
      },
      {
        "command": "extension.switchTypeScript",
        "title": ".ts"
      },
      {
        "command": "extension.switchTest",
        "title": ".spec"
      },
      {
        "command": "extension.switchAction",
        "title": "actions"
      },
      {
        "command": "extension.switchEffect",
        "title": "effects"
      },
      {
        "command": "extension.switchReducer",
        "title": "reducers"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "extension.switchHTML",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.component\\.css)|(\\.component\\.sass)|(\\.component\\.less)|(\\.component\\.html)|(\\.component\\.scss)|(\\.component\\.ts)|(\\.component\\.spec\\.ts)$/"
        },
        {
          "command": "extension.switchCSS",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.component\\.css)|(\\.component\\.sass)|(\\.component\\.less)|(\\.component\\.html)|(\\.component\\.scss)|(\\.component\\.ts)|(\\.component\\.spec\\.ts)$/"
        },
        {
          "command": "extension.switchTypeScript",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.component\\.css)|(\\.component\\.sass)|(\\.component\\.less)|(\\.component\\.html)|(\\.component\\.scss)|(\\.component\\.ts)|(\\.component\\.spec\\.ts)$/"
        },
        {
          "command": "extension.switchTest",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.action)|(\\.reducer)|(\\.effect)|(\\.component\\.css)|(\\.component\\.sass)|(\\.component\\.less)|(\\.component\\.html)|(\\.component\\.scss)|(\\.component\\.ts)|(\\.component\\.spec\\.ts)$/"
        },
        {
          "command": "extension.switchAction",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.action)|(\\.reducer)|(\\.effect)/"
        },
        {
          "command": "extension.switchEffect",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.action)|(\\.reducer)|(\\.effect)/"
        },
        {
          "command": "extension.switchReducer",
          "group": "editing",
          "when": "resourceFilename =~ /(\\.action)|(\\.reducer)|(\\.effect)/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.switchHTML",
        "key": "alt+h",
        "mac": "shift+alt+h"
      },
      {
        "command": "extension.switchCSS",
        "key": "alt+c",
        "mac": "shift+alt+c"
      },
      {
        "command": "extension.switchTypeScript",
        "key": "alt+t",
        "mac": "shift+alt+t"
      },
      {
        "command": "extension.switchTest",
        "key": "alt+s",
        "mac": "shift+alt+s"
      },
      {
        "command": "extension.switchAction",
        "key": "alt+a",
        "mac": "shift+alt+a"
      },
      {
        "command": "extension.switchEffect",
        "key": "alt+e",
        "mac": "shift+alt+e"
      },
      {
        "command": "extension.switchReducer",
        "key": "alt+r",
        "mac": "shift+alt+r"
      }
    ],
    "configuration": {
      "title": "Side by side",
      "properties": {
        "angular-file-changer.openSideBySide": {
          "type": "boolean",
          "default": false,
          "description": "Open files side by side to Angular Component Typescript file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && vscode-test",
    "lint": "eslint src --ext .ts --no-ignore",
    "lint:fix": "eslint src --ext .ts --fix --no-ignore",
    "package": "vsce package --allow-star-activation"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.0.0",
    "mocha": "^11.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jtcrowson/angular-file-changer"
  }
}
